local function changeServer()
	print("Attempting smart search for the smallest server...")
	local requestUrl = string.format("https://games.roproxy.com/v1/games/%d/servers/Public?sortOrder=Asc&limit=20", game.PlaceId)
	local success, response = pcall(function() return HttpService:GetAsync(requestUrl) end)
	if success then
		local serverData_success, serverData = pcall(function() return HttpService:JSONDecode(response) end)
		if serverData_success and type(serverData) == "table" and serverData.data then
			local targetServerId = nil
			for _, server in ipairs(serverData.data) do
				if server.id ~= game.JobId and server.playing < server.maxPlayers then
					targetServerId = server.id
					break
				end
			end
			if targetServerId then
				print("Smart search success! Teleporting to smallest server: " .. targetServerId)
				TeleportService:TeleportToPlaceInstance(game.PlaceId, targetServerId, player)
				return
			end
		end
	end
	print("Smart search failed. Switching to simple random hop.")
	pcall(function() TeleportService:Teleport(game.PlaceId, player) end)
end

teleportBtn.MouseButton1Click:Connect(changeServer)

local running = false
local conn

local function formatTime(t)
    return string.format("%02d:%02d", math.floor(t / 60), math.floor(t % 60))
end

local function stopTimer()
	if conn then conn:Disconnect() end
	running = false
	label.Text = "üìü Auto Rejoin System"
	runBtn.Text = "‚ñ∂ Start Timer"
	runBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
end

local function startTimer(duration)
	if running then return end
	local seconds = duration or tonumber(inputBox.Text)
	if not seconds then return end
	running = true
	local finish = os.clock() + seconds
	conn = RunService.Heartbeat:Connect(function()
		local timeLeft = math.max(0, finish - os.clock())
		label.Text = "‚è≥ " .. formatTime(timeLeft)
		if timeLeft <= 0 then
			conn:Disconnect()
			running = false
			changeServer()
			runBtn.Text = "‚ñ∂ Start Timer"
			runBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
		end
	end)
	runBtn.Text = "‚ñ† Stop Timer"
	runBtn.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
end

runBtn.MouseButton1Click:Connect(function()
    if running then stopTimer() else startTimer() end
end)

local humanoid
local rootPart
local currentTarget
local selectedTarget
local followConnection
local path
local waypoints
local currentWaypointIndex
local lastPathComputeTime = 0
local PATH_RECOMPUTE_INTERVAL = 1.0
local MIN_FOLLOW_DISTANCE = 8
local SHORT_TELEPORT_DISTANCE = 12

local function stopFollowing()
    if followConnection then
        followConnection:Disconnect()
        followConnection = nil
    end
    if humanoid and humanoid.Health > 0 then
        humanoid:MoveTo(rootPart.Position)
    end
    currentTarget = nil
    path = nil
    waypoints = nil
    currentWaypointIndex = nil
    if selectedTarget then
        followToggleBtn.Text = "‚ñ∂Ô∏è ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏° " .. selectedTarget.Name:sub(1,10)
        followToggleBtn.BackgroundColor3 = Color3.fromRGB(0, 128, 255)
    else
        followToggleBtn.Text = "üë• ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢"
        followToggleBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
    end
end

local function followPlayer(targetPlayer)
    stopFollowing()
    if not targetPlayer or not targetPlayer.Character then return end
    local myChar = player.Character or player.CharacterAdded:Wait()
    humanoid = myChar:FindFirstChildOfClass("Humanoid")
    rootPart = myChar:FindFirstChild("HumanoidRootPart")
    if not humanoid or humanoid.Health <= 0 or not rootPart then return end
    currentTarget = targetPlayer
    followToggleBtn.Text = "‚úã ‡∏´‡∏¢‡∏∏‡∏î‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°"
    followToggleBtn.BackgroundColor3 = Color3.fromRGB(180, 0, 0)
    followConnection = RunService.Heartbeat:Connect(function()
        if not currentTarget or not currentTarget.Character or not rootPart or not humanoid or humanoid.Health <= 0 then
            stopFollowing()
            return
        end
        local targetRoot = currentTarget.Character:FindFirstChild("HumanoidRootPart")
        if not targetRoot then
            stopFollowing()
            return
        end
        local distanceToTarget = (rootPart.Position - targetRoot.Position).Magnitude
        if distanceToTarget < SHORT_TELEPORT_DISTANCE then
            if distanceToTarget > MIN_FOLLOW_DISTANCE then
                rootPart.CFrame = targetRoot.CFrame + Vector3.new(0, 4, 0)
            else
                humanoid:MoveTo(rootPart.Position)
            end
            return
        end
        if os.clock() - lastPathComputeTime > PATH_RECOMPUTE_INTERVAL then
            lastPathComputeTime = os.clock()
            local newPath = PathfindingService:CreatePath({ AgentRadius = 3.5, AgentHeight = 6, AgentCanJump = true })
            local success, err = pcall(function() newPath:ComputeAsync(rootPart.Position, targetRoot.Position) end)
            if success and newPath.Status == Enum.PathStatus.Success then
                path = newPath
                waypoints = newPath:GetWaypoints()
                currentWaypointIndex = 2
                path.Blocked:Connect(function(blockedWaypointIndex)
                    if blockedWaypointIndex >= currentWaypointIndex then
                        lastPathComputeTime = 0
                    end
                end)
            else
                path = nil
                waypoints = nil
                if distanceToTarget < 20 then
                    rootPart.CFrame = targetRoot.CFrame + Vector3.new(0, 4, 0)
                end
            end
        end
        if waypoints and currentWaypointIndex and waypoints[currentWaypointIndex] then
            local waypoint = waypoints[currentWaypointIndex]
            humanoid:MoveTo(waypoint.Position)
            if (Vector3.new(rootPart.Position.X, 0, rootPart.Position.Z) - Vector3.new(waypoint.Position.X, 0, waypoint.Position.Z)).Magnitude < 4 then
                currentWaypointIndex += 1
            end
        else
            humanoid:MoveTo(targetRoot.Position)
        end
    end)
end

followToggleBtn.MouseButton1Click:Connect(function()
    if currentTarget then stopFollowing() elseif selectedTarget then followPlayer(selectedTarget) end
end)

local function updatePlayerList()
    for _, child in ipairs(playerListFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end
    local searchText = searchBox.Text:lower()
    for _, p in ipairs(Players:GetPlayers()) do
        if p ~= player and p.Name:lower():find(searchText) then
            local btn = Instance.new("TextButton")
            btn.Size = UDim2.new(1, 0, 0, 30)
            btn.Text = "üë§ " .. p.Name
            btn.TextColor3 = Color3.new(1, 1, 1)
            btn.Font = Enum.Font.Gotham
            btn.TextSize = 14
            btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            btn.Parent = playerListFrame
            Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
            btn.MouseButton1Click:Connect(function()
                selectedTarget = p
                if not currentTarget then
                    followToggleBtn.Text = "‚ñ∂Ô∏è ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏° " .. p.Name:sub(1, 10)
                    followToggleBtn.BackgroundColor3 = Color3.fromRGB(0, 128, 255)
                end
            end)
        end
    end
end

Players.PlayerAdded:Connect(updatePlayerList)
Players.PlayerRemoving:Connect(updatePlayerList)
searchBox:GetPropertyChangedSignal("Text"):Connect(updatePlayerList)
updatePlayerList()

local function setupCharacter(char)
    local hum = char:WaitForChild("Humanoid")
    hum.Died:Connect(changeServer)
    hum.HealthChanged:Connect(function(health)
        if health <= 1 then
            changeServer()
        elseif health < 30 then
            stopTimer()
            startTimer(2)
        end
    end)
end

if player.Character then
    setupCharacter(player.Character)
end

player.CharacterAdded:Connect(function(char)
    setupCharacter(char)
    afkTime = 0
    lastPosition = nil
    if char:FindFirstChild("HumanoidRootPart") then
        lastPosition = char.HumanoidRootPart.Position
    end
end)

task.delay(1, function()
    startTimer()
end)

local MAX_DISTANCE = 1000
local AFK_ENABLED = true
local lastPosition = nil
local afkTime = 0
local AFK_TIMEOUT = 60

afkToggleBtn.MouseButton1Click:Connect(function()
    AFK_ENABLED = not AFK_ENABLED
    afkToggleBtn.Text = AFK_ENABLED and "‚úÖ Auto Rejoin: ON" or "üõë Auto Rejoin: OFF"
    afkToggleBtn.BackgroundColor3 = AFK_ENABLED and Color3.fromRGB(0, 170, 0) or Color3.fromRGB(80, 80, 80)
end)

RunService.Heartbeat:Connect(function(dt)
    if not AFK_ENABLED then
        afkTimerLabel.Text = "‚è± AFK Timer: --"
        return
    end
    if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then return end
    local currentPos = player.Character.HumanoidRootPart.Position
    if lastPosition and (currentPos - lastPosition).Magnitude < 0.1 then
        afkTime += dt
        local remain = math.max(0, AFK_TIMEOUT - afkTime)
        afkTimerLabel.Text = "‚è± AFK Timer: " .. string.format("%.0f", remain) .. "s"
        if afkTime >= AFK_TIMEOUT then
            changeServer()
            afkTime = 0
            afkTimerLabel.Text = "üîÑ Changing Server..."
        end
    else
        afkTime = 0
        afkTimerLabel.Text = "‚è± AFK Timer: " .. AFK_TIMEOUT .. "s"
    end
    lastPosition = currentPos
end)

local function createHighlightESP(targetPlayer)
    if targetPlayer == Players.LocalPlayer then return end
    local function addHighlight(char)
        if not char:FindFirstChild("FullBodyHighlight") then
            local highlight = Instance.new("Highlight")
            highlight.Name = "FullBodyHighlight"
            highlight.FillColor = Color3.fromRGB(255, 0, 0)
            highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
            highlight.FillTransparency = 0.3
            highlight.OutlineTransparency = 0
            highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
            highlight.Adornee = char
            highlight.Parent = char
            if not char:FindFirstChild("ESPName") then
                local bb = Instance.new("BillboardGui")
                bb.Name = "ESPName"
                bb.Adornee = char:FindFirstChild("HumanoidRootPart")
                bb.AlwaysOnTop = true
                bb.Size = UDim2.new(0, 100, 0, 20)
                bb.StudsOffset = Vector3.new(0, 3, 0)
                bb.MaxDistance = MAX_DISTANCE
                bb.Parent = char
                local name = Instance.new("TextLabel")
                name.Size = UDim2.new(1, 0, 1, 0)
                name.BackgroundTransparency = 1
                name.Text = "üî¥ " .. targetPlayer.Name
                name.TextColor3 = Color3.fromRGB(255, 0, 0)
                name.TextScaled = true
                name.Font = Enum.Font.GothamBold
                name.Parent = bb
            end
        end
    end
    local function updateVisibilityLoop(char)
        local highlight = char:FindFirstChild("FullBodyHighlight")
        if not highlight then return end
        RunService.RenderStepped:Connect(function()
            if not char or not char.Parent then return end
            local root = char:FindFirstChild("HumanoidRootPart")
            if not root then return end
            local distance = (root.Position - workspace.CurrentCamera.CFrame.Position).Magnitude
            highlight.Enabled = distance <= MAX_DISTANCE
        end)
    end
    if targetPlayer.Character then
        addHighlight(targetPlayer.Character)
        updateVisibilityLoop(targetPlayer.Character)
    end
    targetPlayer.CharacterAdded:Connect(function(char)
        repeat task.wait() until char:FindFirstChild("HumanoidRootPart")
        addHighlight(char)
        updateVisibilityLoop(char)
    end)
end

for _, plr in ipairs(Players:GetPlayers()) do
    createHighlightESP(plr)
end
Players.PlayerAdded:Connect(createHighlightESP)

-- ===================================================================
-- ##   ‡∏™‡πà‡∏ß‡∏ô‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏°: ‡∏¢‡πâ‡∏≤‡∏¢‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏ï‡πá‡∏°                    ##
-- ===================================================================
local MAX_PLAYER_LIMIT = 15
local playerCountHopEnabled = true -- ‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡πÄ‡∏õ‡πá‡∏ô‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô
local isHopping = false -- ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏¢‡πâ‡∏≤‡∏¢‡∏ã‡πâ‡∏≥‡∏ã‡πâ‡∏≠‡∏ô

hopToggleBtn.MouseButton1Click:Connect(function()
    playerCountHopEnabled = not playerCountHopEnabled -- ‡∏™‡∏•‡∏±‡∏ö‡∏Ñ‡πà‡∏≤ true/false
    if playerCountHopEnabled then
        hopToggleBtn.Text = "Hop at 15: ON"
        hopToggleBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0) -- ‡∏™‡∏µ‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ß
    else
        hopToggleBtn.Text = "Hop at 15: OFF"
        hopToggleBtn.BackgroundColor3 = Color3.fromRGB(170, 0, 0) -- ‡∏™‡∏µ‡πÅ‡∏î‡∏á
    end
end)

local function checkPlayerCountAndHop()
    if not playerCountHopEnabled or isHopping then return end
    local playerCount = #Players:GetPlayers()
    if playerCount >= MAX_PLAYER_LIMIT then
        isHopping = true 
        print("Player count limit reached (" .. playerCount .. "/" .. MAX_PLAYER_LIMIT .. "). Changing server...")
        changeServer()
    end
end

Players.PlayerAdded:Connect(checkPlayerCountAndHop)

task.wait(5) 
checkPlayerCountAndHop()
